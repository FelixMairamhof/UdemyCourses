<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookBlog</title>
</head>
<body>
    <h1>Books</h1>
    <form action="/create">
        <button type="submit">Create new BookBlog</button>
    </form>
    <% data.forEach(row => { %>
        <h1><%= row.title %></h1>
        <h1><%= row.describtion %></h1>
        <h1><%= row.rating %></h1>
        <h1><%= row.time %></h1>
        <form action="/delete" method="POST">
            <button type="submit" name="deleteItemId" value="<%= row.id %>">Delete</button>
        </form>
        <form action="/edit" method="POST">
            <button type="edit" name="editItemId" value="<%= row.id %>"">Edit</button>
        </form>

        
    <% });  %>
    
</body>
</html>